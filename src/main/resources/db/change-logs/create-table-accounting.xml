<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-table-accounting"
               author="Подгорецкая">

        <createTable tableName="accounting">
            <column name="accounting_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="work_days" type="BIGINT">
            </column>
            <column name="salary_of_work_days" type="decimal">
            </column>
            <column name="days_of_vacation" type="BIGINT">
            </column>
            <column name="salary_of_vacation" type="decimal">
            </column>
            <column name="days_of_day_off" type="BIGINT">
            </column>
            <column name="salary_of_day_off" type="decimal">
            </column>
            <column name="days_of_sick_day" type="BIGINT">
            </column>
            <column name="salary_of_sick_day" type="decimal">
            </column>
            <column name="salary_gross" type="decimal">
            </column>
            <column name="tax" type="decimal">
            </column>
            <column name="salary_on_handy" type="decimal"/>
        </createTable>

    </changeSet>

</databaseChangeLog>